<div id="featuredImage" class ="featured-image__header--image-wrapper">
	{% set header_text_color = "black" %}
	{# hero header #}
	<div id="featuredImage" class="featured-image__header--text-outer-wrapper row">
		<div class="featured-image__header--text-wrapper">
			<div class="featured-image__header--text-inner-wrapper">
				<div class="color__block vellum">
					<h1 class="page__header {{ header_text_color }}">
						{{ pro_bono_header_text }}
					</h1>
				</div>
			</div>
		</div>	
	</div>
</div>	
	{# body - with sidebar #}
<div class="row relative z-index__1">
	<div class="experience__wrapper row body__wrapper columns small-12 medium-12 large-12">
		<div class="columns show-for-medium-up medium-3 large-2 sidebar__on-scroll--fixed">
			<div class="padding__wrapper ten sides__only">
				<h4 class="red title__text smaller">
					{{ about_sidebar_header }}
				</h4>
				<span class="list-divider"></span>
				{% for about_sidebar_item in about_sidebar_items %}
			    	{% set link_slug = about_sidebar_item.about_sidebar_item_link|split('/')[3] %}
			    	<a class="{% if slug == link_slug %}red{% endif %} link sidebar__link" href="{{ about_sidebar_item.about_sidebar_item_link }}">
			    		{{ about_sidebar_item.about_sidebar_item_text|upper }}
			    	</a>
			    {% endfor %}
			</div>
		</div>	
		<div class="columns small-12 medium-9 large-10">
			<div class="columns small-12 medium-12 large-12">
				<p class="title__text">
					{{ pro_bono_top_content }}
				</p>
				<p class="body__text">
					{{ post.content }}
				</p>
			</div>
		</div>
	</div>
</div>
<div id="proBonoImage scroll-stopper">
	<div class="row">
		<div class="table__wrapper pro-bono__banner">
		    <div class="table__inner pro-bono__banner">
		        <div class="color-block__wrapper large-6 medium-8 small-12 float--right">
		          <div class="color__block white relative">
		            <div class="slide-description">
		            	<h4 class="tag__text bigger red">
		                	{{ pro_bono_bottom_banner_header|upper }}
		            	</h4>
		            </div>
					<span class="list-divider about__deatils red"></span>
		            <p class="title__text black">
		            	{{ pro_bono_bottom_banner_text_content }}
		            </p>
					<a href="{{ pro_bono_bottom_banner_link_url }}">
						<span class="tile__arrow pro-bono">
							<img src="{{hover_arrow}}">
						</span>
					</a>     
		          </div>  
		        </div>
	        </div>
		</div>
	</div>	
</div>

<script type="text/javascript">
	{% if banner_image|length > 0 %}
		$(document).ready(function(){
			$('#featuredImage').backstretch("{{ banner_image }}");
		})
	{% endif %}
	{% if banner_image|length > 0 %}
		$(document).ready(function(){
			$('#proBonoImage').backstretch("{{ pro_bono_bottom_banner_image }}");
		})
	{% endif %}
</script>