<div id="featuredImage" class ="featured-image__header--image-wrapper">

	{% set header_text_color = "black" %}
	{# hero header #}
	<div class="featured-image__header--text-outer-wrapper row">
		<div class="featured-image__header--text-wrapper">
			<div class="featured-image__header--text-inner-wrapper">
				<div class="color__block vellum">
					<h1 class="page__header {{ header_text_color }}">
						{{ about_header_text }}
					</h1>
				</div>
			</div>
		</div>	
	</div>
</div>	
	{# body - with sidebar #}
<div class="row">
	<div class="experience__wrapper row body__wrapper columns small-12 medium-12 large-12">
		<div class="columns medium-3 large-2 small-12 sidebar__on-scroll--fixed">
			<div class="padding__wrapper ten sides__only">
				{# DESKTOP SIDEBAR HEADER #}
				<h4 class="red title__text smaller hide-for-small-only">
					{{ about_sidebar_header }}
				</h4>
				{# MOBILE SIDEBAR HEADER #}
				<h4 class="show-for-small-only accordion__trigger red list__header mobile" data-trigger-target="sidebarMobileAccordion">
					{{ about_sidebar_header }}
				</h4>
				<span class="show-for-small-only expander top__menu" data-show-target="about_sidebar_item_link" ></span>
				{# DESKTOP SIDEBAR LIST DIVIDER #}
				<span class="list-divider hide-for-small-only"></span>
				{# MOBILE SIDEBAR LIST DIVIDER #}
				<span class="list-divider mobile show-for-small-only"></span>
				
				<div class="sidebar-items__wrapper">
				    {% for sidebar_item in about_sidebar_items %}
			    		{% set link_slug = sidebar_item.about_sidebar_item_link|split('/')[3] %}
				    	{% if sidebar_item.has_sub_menu %}
						{# DESKTOP SUBMENU ITEMS #}
							<a class="{% if slug == link_slug %}red{% endif %} hide-for-small-only accordion__trigger link" data-trigger-target="{{sidebar_item.about_sidebar_submenu_accordion_trigger }}">
								{{ sidebar_item.about_sidebar_item_text|upper }}
							</a>
							<ul id="blogsSidebarAccordion" class="hidden list-style__none hide-for-small-only">
								{% for sidebar_submenu_item in sidebar_item.about_sidebar_submenu %}
									<li class="list-item__sidebar">
										<a class="link sidebar__link" href="{{ sidebar_submenu_item.about_sidebar_submenu_item_link }}" >
											{{ sidebar_submenu_item.about_sidebar_submenu_item_text }}
										</a>
									</li>
								{% endfor %}
							</ul>
						{# MOBILE SUBMENU ITEMS #}
							<a class="show-for-small-only accordion__trigger red list__header" data-trigger-target="aboutSidebarAccordionMobile">
								{{ sidebar_item.about_sidebar_item_text }}
							</a>
							<ul id="aboutSidebarAccordionMobile" class="mobile__sidebar--menu list-style__none show-for-small-only">
								{% for sidebar_submenu_item in sidebar_item.about_sidebar_submenu %}
									<li class="list-item__sidebar">
										<a class="{% if slug == link_slug %}red{% endif %} link sidebar__link" href="{{ sidebar_submenu_item.about_sidebar_submenu_item_link }} mobile" >
											{{ sidebar_submenu_item.about_sidebar_submenu_item_text }}
										</a>
									</li>
								{% endfor %}
							</ul>
						{% else %}
						{# DESKTOP MENU ITEMS #}
					    	<a class="{% if slug == link_slug %}red{% endif %} hide-for-small-only link sidebar__link" href="{{ sidebar_item.about_sidebar_item_link }}">
					    		{{ sidebar_item.about_sidebar_item_text|upper }}
					    	</a>
						{# MOBILE MENU ITEMS #}
							<a class="{% if slug == link_slug %}red{% endif %} show-for-small-only link sidebar__link mobile {% if loop.last %} last-sidebar__link{% endif %}" href="{{ sidebar_item.about_sidebar_item_link }}">
					    		{{ sidebar_item.about_sidebar_item_text|upper }}
					    	</a>
						{% endif %}
				    {% endfor %}
				</div>    
			</div>
		</div>	
		<div class="columns small-12 medium-9 large-10">
			<div class="columns small-12 medium-12 large-12">
				<p class="title__text">
					{{ text_content_top }}
				</p>
				<p class="body__text">
					{{ text_content_body }}
				</p>
			</div>	
		</div>
	</div>
</div>
<div class="grey__background experience__wrapper columns small-12 medium-12 large-12">
	<div class="row padding__wrapper top-and-bottom sixty">
		<div class="large-offset-2 medium-offset-3 columns large-10 medium-9 small-12">
			<div class="color__block--outer-wrapper white__bg">
				<div class="color__block--inner-wrapper">
					<p class="body__text">
						{{ bullet_section_header }}
					</p>
					{% for bullet in bullets %}
						{% set bullet = bullet|first %}
						<div class="bullet">
							<div class="body__text bullet__text">
								{{bullet}}
							</div>
						</div>	
					{% endfor %}
				</div>
			</div>	
		</div>
	</div>
</div>

<script type="text/javascript">
	{% if featured_image_url %}
		$(document).ready(function(){
			$('#featuredImage').backstretch("{{featured_image_url}}");
		})
	{% endif %}
</script>