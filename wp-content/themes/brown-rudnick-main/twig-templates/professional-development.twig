<div id="featuredImage" class ="featured-image__header--image-wrapper" >
	{% set header_text_color = "black" %}
	{# hero header #}
	<div class="featured-image__header--text-outer-wrapper row">
		<div class="featured-image__header--text-wrapper">
			<div class="featured-image__header--text-inner-wrapper">
				<div class="color__block vellum">
					<h1 class="page__header {{ header_text_color }}">
						{{ header_text }}
					</h1>
				</div>
			</div>
		</div>	
	</div>
</div>


{# body - with sidebar #}
<div class="row white-row relative z-index__1">
	<div class="row careers__wrapper body__wrapper columns small-12 medium-12 large-12">
		<div class="columns show-for-medium-up medium-3 large-2 sidebar__on-scroll--fixed">
			<div class="padding__wrapper ten sides__only">
				{# DESKTOP SIDEBAR HEADER #}
				<h4 class="red title__text smaller hide-for-small-only">
					<a class="red link inline__link" href="/careers">
						{{ sidebar_header }}
					</a>
				</h4>
				{# MOBILE SIDEBAR HEADER #}
				<h4 class="show-for-small-only accordion__trigger red list__header mobile" data-trigger-target="sidebarMobileAccordion">
					<a class="red link inline__link" href="/careers">
						{{ sidebar_header }}
					</a>
				</h4>
				<span class="show-for-small-only expander top__menu" data-show-target="sidebarMobileAccordion" ></span>
				{# DESKTOP SIDEBAR LIST DIVIDER #}
				<span class="list-divider hide-for-small-only"></span>
				{# MOBILE SIDEBAR LIST DIVIDER #}
				<span class="list-divider mobile show-for-small-only"></span>
				
				<div class="sidebar-items__wrapper">
				    {% for sidebar_item in sidebar_items %}
		    			{% set link_slug = sidebar_item.item_link|split('/')[3] %}
						{# DESKTOP MENU ITEMS #}
				    	<a class="medium__weight__spacing {% if slug == link_slug|lower %}red{% endif %} hide-for-small-only link sidebar__link" href="{{ sidebar_item.item_link }}">
				    		{{ sidebar_item.item_label|upper }}
				    	</a>
					{# MOBILE MENU ITEMS #}
						<a class="{% if slug == link_slug|lower %}red{% endif %} show-for-small-only link sidebar__link mobile {% if loop.last %} last-sidebar__link{% endif %}" href="{{ sidebar_item.item_link }}">
				    		{{ sidebar_item.item_label|upper }}
				    	</a>
				    {% endfor %}
				</div>    
			</div>
		</div>
		<div class="columns small-12 medium-9 large-10 float--right relative">
			<div class="columns small-12 medium-12 large-12 relative">
				<p class="title__text">
					{{ main_body_title }}
				</p>
				<p class="body__text">
					{{ first_paragraph }}
				</p>
				<p class="body__text">
					{{ second_paragraph }}
				</p>
				<p class="body__text">
					{{ third_paragraph }}
				</p>
		</div>


	

		<div class="experience__wrapper columns small-12 medium-12 large-12 margin-top-60">
			<div class="row padding__wrapper top-and-bottom">
						<div class="columns">
							<p class="title__text">
								{{ highlights_title }}
							</p>
							<div class="bullets inline__text">
								{% for item in highlights %}
									<div class="bullet bullet__full-width">
										<div class="body__text bullet__text">
											{{item.highlight}}
										</div>
									</div>	
								{% endfor %}
							</div>	
							{{ features_bottom_text }}
							<p class="body__text roman">
								{{ bullet_section_bottom_content }}
							</p>
							<p class="body__text smaller italic">
								{{ bullet_section_notice }}
							</p>
						</div>
			</div>
		</div>

	
	</div>
</div>




<script type="text/javascript">
	{% if featured_image_url %}
		$(document).ready(function(){
			$('#featuredImage').backstretch("{{featured_image_url}}");
		})
	{% endif %}
</script>