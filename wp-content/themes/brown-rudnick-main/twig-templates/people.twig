<div class="row">
	<div class="experience__wrapper row body__wrapper content columns small-12 medium-12 large-12" data-sticky_parent >
		<div class="columns show-for-medium-up small-12 medium-3 large-2 x-large-2 sidebar__on-scroll--fixed">
			<h4 class="red title__text smaller">
				Browse by Last Name
			</h4>
			<span class="list-divider letter__links"></span>
			<div class="letter__links_wrapper">
				{% for letter in alphabet %}
				    <div class="columns medium-4 large-4 small-2 {% if loop.index == 26 %} float-left   {% endif %} letter__link--outer-wrapper">
				    	<div class="letter__link--inner-wrapper {% if loop.first %} letter--active {% endif %}">
					    	<a data-letter="{{letter}}" class="letter__link">
					    		{{ letter }}
					    	</a>
				    	</div>
				    </div>
				{% endfor %}
			</div>
				<button id="advancedPeopleSearch" type="button" class="sites-button inverse advanced-search small-5 medium-12" >
					Advanced Search
				</button>
		</div>	

		<div class="columns no__pad small-12 medium-8 large-10 relative float--right people__details--container">
			<div class="padding__wrapper forty sides__only">	
				<div class="columns small-12 medium-12 large-12 relative margin-bottom--20">
					<div>
						{% if geography %}
								<div class="tag__container small-6 medium-6 large-3">
							 		<div class="tag__half">
								 		<p class="keyword--title">geography</p>
								 		<p class="keyword--container">{{ geography }}</p>
							 		</div>
							 		<div class="tag__half">
								 		<button class="tag__canceller" data-name='geography_query' data-tag="{{ geography }}">
								 			x
								 		</button>
							 		</div>
							 	</div>
						{% endif %}
						{% if location %}
								<div class="tag__container small-6 medium-6 large-3">
							 		<div class="tag__half">
								 		<p class="keyword--title">location</p>
								 		<p class="keyword--container">{{ location }}</p>
							 		</div>
							 		<div class="tag__half">
								 		<button class="tag__canceller" data-name='geography_query' data-tag="{{ location}}">
								 			x
								 		</button>
							 		</div>
							 	</div>
						{% endif %}
						{% if industry %}
							<div class="tag__container small-6 medium-6 large-3">
							 		<div class="tag__half">
								 		<div class="tag__half">
									 		<p class="keyword--title">industry</p>
									 		<p class="keyword--container">{{ industry }}</p>
								 		</div>
								 		<div class="tag__half">
									 		<button class="tag__canceller" data-name='industry_query' data-tag="{{ industry }}">
									 			x
									 		</button>
								 		</div>
								 	</div>
							 </div>
						{% endif %}
						{% if practice %}
							<div class="tag__container small-6 medium-6 large-3">
							 		<div class="tag__half">
								 		<p class="keyword--title">practice</p>
								 		<p class="keyword--container">{{ practice }}</p>
							 		</div>
							 		<div class="tag__half">
								 		<button class="tag__canceller" data-name='practice_query' data-tag="{{ practice }}">
								 			x
								 		</button>
							 		</div>
							</div>
						{% endif %}
						{% if language %}
								<div class="tag__container small-6 medium-6 large-3">
							 		<div class="tag__half">
								 		<p class="keyword--title">language</p>
								 		<p class="keyword--container">{{ language }}</p>
							 		</div>
							 		<div class="tag__half">
								 		<button class="tag__canceller" data-name='language_query' data-tag="{{ language }}">
								 			x
								 		</button>
							 		</div>
							 	</div>
						{% endif %}
						{% if admission %}
							<div class="tag__container small-6 medium-3 large-3">
							 		<div class="tag__half">
								 		<p class="keyword--title">admission</p>
								 		<p class="keyword--container">{{ admission }}</p>
							 		</div>
							 		<div class="tag__half">
								 		<button class="tag__canceller" data-name='admission_query' data-tag="{{ admission }}">
								 			x
								 		</button>
							 		</div>
							 </div>
						{% endif %}
						{% if education %}
							<div class="tag__container small-6 medium-6 large-3">	
							 		<div class="tag__half">
								 		<p class="keyword--title">education</p>
								 		<p class="keyword--container">{{ education }}</p>
							 		</div>
							 		<div class="tag__half">
								 		<button class="tag__canceller" data-name='education_query' data-tag="{{ education }}">
								 			x
								 		</button>
							 		</div>
							 </div>
						{% endif %}	
						{% if keyword %}

							 <div class="tag__container small-6 medium-6 large-3">
							 		<div class="tag__half">
								 		<p class="keyword--title">keyword</p>
								 		<p class="keyword--container">{{keyword}}</p>
							 		</div>
							 		<div class="tag__half">
								 		<button class="tag__canceller" data-name='keyword' data-tag="{{keyword}}">
								 			x
								 		</button>
							 		</div>
							 </div>
						{% endif %}	
					</div>
					{% if people|length > 0 %}
						{% if geography or location or industry or practice or language or admission or education or keyword %}
							<p class="title__text">
								Search results 
							</p>
						{% endif  %}	
						{% for person in people %}
							{% set first_letter_of_last = person.last_name|slice(0,1)|upper %}
							{% set previous_item = people[ loop.index0 - 1] %}
							{% for letter in alphabet %}
								{% if letter|upper == first_letter_of_last|upper %}	
									{% if previous_item.last_name|slice(0,1) != person.last_name|slice(0,1) %}
										<div class="columns small-12 medium-12 large-12 relative">
											<div class="columns small-1 medium-1 large-1 relative">
												<div data-letter-anchor="{{ letter }}" class="letter__anchor--indicator">
													<div class="letter__anchor--inner-indicator">
														{{ letter }}
													</div>	
												</div> 
											</div>
											<div class="columns small-10 medium-11 large-11 relative">
												<span class="page__divider grey inline__block people">
												</span>
											</div>	
										</div>	
									{% endif %}
									<div class="columns medium-12 large-6 small-12 min--height__225 end">
										<div class="columns medium-6 large-6 small-12">
											<div class="people__image__container">
												<img class="people__details" src="{{ TimberImage(person.image).src }}" />
											</div>
										</div>
										<div class="columns medium-6 large-6 small-12">
											<div class="people__details--outer-wrapper">
												<div class="people__details--inner-wrapper">
													<a href="{{ person._permalink }}" class="people__details title__text smaller">
														{# {{ person.first_name }} {% if person.middle_initial %}{{ person.middle_initial }}. {% endif %} {{ person.last_name }} #}
														{% if person.last_name %} 
															{{person.last_name}}, 
														{% endif %} 
														{% if person.first_name %}
															{{ person.first_name}}
														{% endif %} 
														{% if person.middle_initial %}
															{{ person.middle_initial }}.
														{% endif %}
													</a>

													{% if person.title %}	
														<p class="people__details tag__text">
															{{ person.job_title|upper }}
														</p>
													{% endif %}	
													<span class="people__details list-divider red"></span>
													<p class="people__details body__text">
														{{ person.primary_city }}, {{ person.primary_state }}{% if person.secondary_city and person.secondary_state %} | {{ person.secondary_city }}, {{ person.secondary_state}} {% endif %} 
													</p>
													<p class="people__details body__text">
														{{ person.primary_phone_number }}
													</p>
													<a href="mailto:{{person.email}}" class="email--people--link red link inline__link body__text people__details">
														{{ person.email }}
													</a>
												</div>
											</div>	
										</div>
									</div>
								{% endif %}	
							{% endfor %}
						{% endfor %}
					{% else %}
						<p class="title__text">
							Sorry! We couldn't find any results for your query!
						</p>
					{% endif %}
				</div>
			</div>	
		</div>
	</div>
</div>


