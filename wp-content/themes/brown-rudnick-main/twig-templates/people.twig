<div id="featuredImage" class ="featured-image__header--image-wrapper">

	{% set header_text_color = "black" %}
	{# hero header #}
	<div class="featured-image__header--text-outer-wrapper row">
		<div class="featured-image__header--text-wrapper">
			<div class="featured-image__header--text-inner-wrapper">
				<div class="color__block vellum">
					<h1 class="page__header {{ header_text_color }}">
						People
					</h1>
				</div>
			</div>
		</div>	
	</div>
</div>	
	{# body - with sidebar #}
<div class="row">
	<div class="experience__wrapper row body__wrapper columns small-12 medium-12 large-12">
		<div class="columns show-for-medium-up medium-3 large-2 x-large-2 sidebar__on-scroll--fixed">
			<div class="padding__wrapper ten sides__only">
				<h4 class="red title__text smaller">
					Browse by Last Name
				</h4>
				<span class="list-divider letter__links"></span>
				<div class="letter__links_wrapper">
					{% for letter in alphabet %}
					    <div class="columns medium-4 large-4 small-2 {% if loop.index == 26 %} float-left   {% endif %} letter__link--outer-wrapper">
					    	<div class="letter__link--inner-wrapper {% if loop.first %} active {% endif %}">
						    	<a data-letter="{{letter}}" class="letter__link">
						    		{{ letter }}
						    	</a>
					    	</div>
					    </div>			    	
					{% endfor %}    	    
				</div>
				<div class="letter__links_wrapper">
					<button id="advancedPeopleSearch" type="button" class="sites-button inverse advanced-search" >
						Advanced Search
					</button>
				</div>
			</div>
		</div>	
		<div class="columns small-12 medium-9 large-10 relative float--right">
			<div class="padding__wrapper forty sides__only">	
				<div class="columns small-12 medium-12 large-12 relative">
					{% for person in people %}
						{% set first_letter_of_last = person.last_name|slice(0,1)|upper %}
						{% set previous_item = people[ loop.index0 - 1] %}
						{% for letter in alphabet %}
							{% if letter|upper == first_letter_of_last|upper %}	
								{% if previous_item.last_name|slice(0,1) != person.last_name|slice(0,1) %}
									<div class="columns small-12 medium-12 large-12 relative">
										<div class="columns small-1 medium-1 large-1 relative">
											<div data-letter-anchor="{{ letter }}" class="letter__anchor--indicator">
												<div class="letter__anchor--inner-indicator">
													{{ letter }}
												</div>	
											</div> 
										</div>
										<div class="columns small-11 medium-11 large-11 relative">
											<span class="page__divider grey inline__block people">
											</span>
										</div>	
									</div>	
								{% endif %}	
								<div class="columns medium-12 large-6 small-12 margin-bottom--20 end">
									<div class="columns medium-6 large-6 small-12">
										<img class="people__details" src="{{ TimberImage(person.image).src }}" />
									</div>
									<div class="columns medium-6 large-6 small-12">
										<div class="people__details--outer-wrapper">
											<div class="people__details--inner-wrapper">
												<a href="{{ person._permalink }}" class="people__details title__text smaller">
													{# {{ person.first_name }} {% if person.middle_initial %}{{ person.middle_initial }}. {% endif %} {{ person.last_name }} #}
													{{ person.name }}
												</a>
												{% if person.title %}	
													<p class="people__details tag__text">
														{{ person.job_title|upper }}
													</p>
												{% endif %}	
												<span class="people__deatils list-divider red"></span>
												<p class="people__details body__text">
													{{ person.primary_city }}, {{ person.primary_state }}{% if person.secondary_city and person.secondary_state %} | {{ person.secondary_city }}, {{ person.secondary_state}} {% endif %} 
												</p>
												<p class="people__details body__text">
													{{ person.primary_phone_number }}
												</p>
												<a href="mailto:{{person.email}}" class="red link inline__link body__text people__details">
													{{ person.email }}
												</p>
											</div>
										</div>	
									</div>
								</div>
							{% endif %}	
						{% endfor %}
					{% endfor %}
				</div>
			</div>	
		</div>
	</div>
</div>
<script type="text/javascript">
	{% if featured_image_url %}
		$(document).ready(function(){
			$('#featuredImage').backstretch("{{featured_image_url}}");
		})
	{% endif %}
</script>