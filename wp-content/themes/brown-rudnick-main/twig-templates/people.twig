<div id="advancedSearchModal" class="vellum black--vellum modal__background diversity hidden">
    <div class="row">
     	<div class="diversity__modal--outer-wrapper table__wrapper relative">
        	<div class="diversity__modal--inner-wrapper table__innner">
          		<div class="diversity__modal--text-wrapper">
		            <button class="close__modal cancel"></button>
		            <p class="title__text text-align__center">
		              Advanced Search
		            </p>
		            <p class="body__text bigger text-align__center wide-spacing">
		              SEARCH ALL PEOPLE
		            </p>
			        <form id="peopleAdvancedSearch">
			            <div class="columns large-12 medium-12 small-6">
			              <input id="keywordInput" type="text" name="s" placeholder="Name or Keyword">
			            </div>
			            <div class="columns large-6 medium-6 small-6">
			            	<select id="geographySelect" name="geography_query" class="clean___border inline__text grey__bold__text smaller">
								<option value="">
									GEOGRAPHIES
								</option>
								{% for geography in geographies %}
									<option value="{{ geography.slug|upper }}">
										{{ geography.name|upper }}
									</option>
								{% endfor %}
							</select>
						</div>
						<div class="columns large-6 medium-6 small-6">	
							<select id="industrySelect" name="industry_query" class="clean___border inline__text grey__bold__text smaller">
								<option value="">
									INDUSTRIES
								</option>
								{% for industry in industries %}
									<option value="{{ industry.slug|upper }}">
										{{ industry.name|upper }}
									</option>
								{% endfor %}
							</select>
						</div>	
						<div class="columns large-6 medium-6 small-6">
							<select id="practiceSelect" name="practice_query" class="clean___border inline__text grey__bold__text smaller">
								<option value="">
									PRACTICES
								</option>
								{% for practice in practices %}
									<option value="{{ practice.slug|upper }}">
										{{ practice.name|upper }}
									</option>
								{% endfor %}
							</select>
			            </div>
						<div class="columns large-6 medium-6 small-6">
							<select id="languageSelect" name="language_query" class="clean___border inline__text grey__bold__text smaller">
								<option value="">
									LANGUAGES
								</option>
								{% for language in languages %}
									<option value="{{ language.slug|upper }}">
										{{ language.name|upper }}
									</option>
								{% endfor %}
							</select>
			            </div>
						<div class="columns large-6 medium-6 small-6">
							<select id="locationSelect" name="location_query" class="clean___border inline__text grey__bold__text smaller">
								<option value="">
									LOCATIONS
								</option>
								{% for location in locations %}
									<option value="{{ location.slug|upper }}">
										{{ location.name|upper }}
									</option>
								{% endfor %}
							</select>
			            </div>
			            <div class="columns large-6 medium-6 small-6">
							<select id="admissionSelect" name="admission_query" class="clean___border inline__text grey__bold__text smaller">
								<option value="">
									ADMISSIONS
								</option>
								{% for admission in admissions %}
									<option value="{{ admission.slug|upper }}">
										{{ admission.name|upper }}
									</option>
								{% endfor %}
							</select>
			            </div>
			            <div class="columns large-6 medium-6 small-6">
							<select id="educationSelect" name="education_query" class="clean___border inline__text grey__bold__text smaller">
								<option value="">
									EDUCATION
								</option>
								{% for education in educations %}
									<option value="{{ education.slug|upper }}">
										{{ education.name|upper }}
									</option>
								{% endfor %}
							</select>
			            </div>
						<div class="columns large-12 small-12 medium-12 search__button__container">
							<button id="peopleAdvancedSearchButton" type="button" class="sites-button">
								Submit
							</button>
						</div>
			        </form>    
         		</div>
        	</div>  
     	</div>
    </div>  
</div>

